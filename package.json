{
  "author": "Drew Ritter <drew@ritter.dev>",
  "bin": {
    "commitment": "./dist/cli.js"
  },
  "dependencies": {
    "@openai/agents": "^0.1.11",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "ts-pattern": "^5.8.0",
    "zod": "^4.1.12"
  },
  "description": "AI-powered commit message generator with intelligent fallback",
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "@types/node": "^24.3.0",
    "bun-types": "latest",
    "husky": "^9.1.7",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "claude",
    "commit-message",
    "conventional-commits",
    "precommit",
    "husky",
    "lint-staged"
  ],
  "license": "ISC",
  "main": "./dist/index.js",
  "name": "@arittr/commitment",
  "packageManager": "bun@1.1.0",
  "scripts": {
    "build": "bun run build.ts",
    "check-types": "bun tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "bun --watch build.ts",
    "lint": "bun check-types && biome check --write",
    "prepare": "bun run build && husky",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "bun test src/agents src/cli src/types src/utils src/__tests__",
    "test:coverage": "bun test --coverage src/agents src/cli src/types src/utils src/__tests__",
    "test:eval": "bun test src/eval/__tests__/eval-live.test.ts",
    "test:watch": "bun test --watch src/agents src/cli src/types src/utils src/__tests__"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "1.0.0"
}
