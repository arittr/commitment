{
  "author": "Drew Ritter <drew@ritter.dev>",
  "bin": {
    "commitment": "./dist/cli.js"
  },
  "dependencies": {
    "@openai/agents": "^0.1.11",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "ts-pattern": "^5.8.0",
    "zod": "^4.1.12"
  },
  "description": "AI-powered commit message generator with intelligent fallback",
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "claude",
    "commit-message",
    "conventional-commits",
    "precommit",
    "husky",
    "lint-staged"
  ],
  "license": "ISC",
  "main": "./dist/index.js",
  "name": "@arittr/commitment",
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "pnpm run type-check && biome check .",
    "lint:fix": "pnpm run type-check && biome check --write .",
    "prepare": "pnpm run build && husky",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:eval": "vitest run src/__tests__/integration/eval-live.test.ts",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "1.0.0"
}
