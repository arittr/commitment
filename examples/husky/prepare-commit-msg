#!/bin/sh
# Husky prepare-commit-msg hook for commitment
# This hook generates commit messages using AI before you edit them

# Only run for regular commits (not merge, squash, etc.)
if [ -z "$2" ]; then
  echo "ðŸ¤– Generating commit message..." > /dev/tty 2>/dev/null || true
  exec < /dev/tty && npx @arittr/commitment --message-only > "$1" || true
fi
