{
  "description": "Example simple-git-hooks configuration for commitment",
  "devDependencies": {
    "@arittr/commitment": "latest",
    "simple-git-hooks": "^2.11.1"
  },
  "name": "commitment-simple-git-hooks-example",
  "private": true,
  "scripts": {
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "prepare-commit-msg": "[ -z \"$2\" ] && npx commitment --message-only > $1"
  },
  "version": "1.0.0"
}
